<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ApparelNoQualityBase">
    <defName>Raven_Apparel_ZuoYao_Outfit</defName>
    <label>扶桑司命礼装</label>
    <description>扶桑组织高级司命的专属礼装。设计极具威严与神秘感，面料融合了暗羽钢纤维，提供卓越的防护性能。</description>
    <graphicData>
      <!-- 使用左爻衣服的正面图作为图标 -->
      <texPath>Races/Raven/Special/ZuoYao/Apparel/ZuoYao_Apparel_south</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    
    <statBases>
      <MarketValue>5000</MarketValue>
      <Mass>2.0</Mass>
      <ArmorRating_Sharp>12</ArmorRating_Sharp>
      <ArmorRating_Blunt>8</ArmorRating_Blunt>
      <ArmorRating_Heat>8</ArmorRating_Heat>
      <Insulation_Cold>5000</Insulation_Cold>
      <Insulation_Heat>3000</Insulation_Heat>
      <EquipDelay>1.0</EquipDelay>
    </statBases>
    
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Legs</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Neck</li>
      </bodyPartGroups>
      
      <!-- 穿着贴图路径 -->
      <!-- 文件名应为 ZuoYao_Apparel_south.png, ZuoYao_Apparel_east.png, etc. -->
      <wornGraphicPath>Races/Raven/Special/ZuoYao/Apparel/ZuoYao_Apparel</wornGraphicPath>
      
      <layers>
        <li>OnSkin</li>
        <li>Shell</li>
      </layers>
      
      <tags>
        <li>ZuoYao_Apparel</li> <!-- 专属 Tag，防止其他人随机穿 -->
      </tags>
      
      <!-- 设为不可交易，防止出现在商店 -->
      <defaultOutfitTags>
        <li>ZuoYao_Exclusive</li>
      </defaultOutfitTags>
    </apparel>
    
    <tradeability>None</tradeability>
    <destroyOnDrop>true</destroyOnDrop> <!-- 死后销毁，保持唯一性 -->
  </ThingDef>
</Defs>