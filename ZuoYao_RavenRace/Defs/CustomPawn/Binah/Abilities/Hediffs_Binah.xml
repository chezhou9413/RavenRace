<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef>
    <defName>Raven_Hediff_Binah_DegradationLock</defName>
    <label>劣化之锁</label>
    <description>被Binah的劣化之锁束缚。无法移动，无法操作。</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.8, 0.8, 0.2)</defaultLabelColor>
    <isBad>true</isBad>
    <initialSeverity>1.0</initialSeverity> <!-- 确保有初始严重度 -->
    <comps>
      <!-- 移除 IntRange，使用固定值 -->
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>60000~60000</disappearsAfterTicks> <!-- 明确的范围 -->
        <showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <setMax>0</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <setMax>0</setMax>
          </li>
        </capMods>
      </li>
    </stages>
    
    <!-- 渲染节点移到根目录下 -->
    <renderNodeProperties>
      <li>
        <nodeClass>PawnRenderNode</nodeClass>
        <workerClass>RavenRace.Features.CustomPawn.Binah.PawnRenderNodeWorker_HediffVisual</workerClass>
        <texPath>Races/Raven/Special/Binah/Abilities/LockChain</texPath>
        <parentTagDef>Body</parentTagDef>
        <drawData>
          <scale>1.5</scale>
        </drawData>
      </li>
    </renderNodeProperties>
  </HediffDef>
</Defs>