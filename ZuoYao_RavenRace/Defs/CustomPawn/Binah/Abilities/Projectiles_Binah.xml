<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- 柱子基础 -->
  <ThingDef Name="Raven_Binah_PillarBase" ParentName="BaseBullet" Abstract="True">
    <thingClass>Projectile_Explosive</thingClass>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>Transparent</shaderType>
      <drawSize>10</drawSize> <!-- 超大贴图 -->
    </graphicData>
    <projectile>
      <damageDef>Bomb</damageDef>
      <damageAmountBase>200</damageAmountBase> <!-- 巨大伤害 -->
      <speed>50</speed>
      <flyOverhead>false</flyOverhead> <!-- [Fix] 设为false才能撞墙 -->
      <explosionRadius>10</explosionRadius> <!-- [Fix] 巨大爆炸范围 -->
      <!-- 总是命中 -->
      <alwaysFreeIntercept>true</alwaysFreeIntercept>
    </projectile>
  </ThingDef>

  <!-- 1-4 形态 (继承上方) -->
  <ThingDef ParentName="Raven_Binah_PillarBase">
    <defName>Raven_Projectile_Binah_Pillar_I</defName>
    <label>暴虐之碑</label>
    <graphicData><texPath>Races/Raven/Special/Binah/Abilities/Pillar1</texPath></graphicData>
  </ThingDef>
  <ThingDef ParentName="Raven_Binah_PillarBase">
    <defName>Raven_Projectile_Binah_Pillar_II</defName>
    <label>暴虐之碑</label>
    <graphicData><texPath>Races/Raven/Special/Binah/Abilities/Pillar2</texPath></graphicData>
  </ThingDef>
  <ThingDef ParentName="Raven_Binah_PillarBase">
    <defName>Raven_Projectile_Binah_Pillar_III</defName>
    <label>暴虐之碑</label>
    <graphicData><texPath>Races/Raven/Special/Binah/Abilities/Pillar3</texPath></graphicData>
  </ThingDef>
  <ThingDef ParentName="Raven_Binah_PillarBase">
    <defName>Raven_Projectile_Binah_Pillar_IV</defName>
    <label>暴虐之碑</label>
    <graphicData><texPath>Races/Raven/Special/Binah/Abilities/Pillar4</texPath></graphicData>
  </ThingDef>

  <!-- 劣化之柱 -->
  <ThingDef ParentName="BaseBullet">
    <defName>Raven_Projectile_Binah_Degradation</defName>
    <label>劣化之柱</label>
    <!-- 使用我们修复后的 WithTrail 类 (继承自Explosive) -->
    <thingClass>RavenRace.Features.CustomPawn.Binah.Projectile_WithTrail</thingClass>
    <graphicData>
      <texPath>Races/Raven/Special/Binah/Abilities/PillarAttack</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>10</drawSize>
    </graphicData>
    <projectile>
      <damageDef>Bomb</damageDef>
      <damageAmountBase>150</damageAmountBase>
      <speed>60</speed>
      <flyOverhead>false</flyOverhead> <!-- 设为false撞击路径上的物体 -->
      <explosionRadius>5</explosionRadius>
    </projectile>
  </ThingDef>

  <!-- ... (Mote 定义保持不变) ... -->
  <ThingDef ParentName="MoteBase">
    <defName>Raven_Mote_Binah_FairyTrail</defName>
    <label>妖灵</label>
    <graphicData>
      <texPath>Races/Raven/Special/Binah/Abilities/Fairy</texPath>
      <graphicClass>Graphic_Mote</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
      <drawSize>8</drawSize>
    </graphicData>
    <mote>
      <fadeInTime>0.1</fadeInTime>
      <solidTime>0.3</solidTime>
      <fadeOutTime>0.5</fadeOutTime>
    </mote>
  </ThingDef>

  <ThingDef ParentName="MoteBase">
    <defName>Raven_Mote_Binah_ShockwaveDistortion</defName>
    <label>震击波</label>
    <graphicData>
      <texPath>Races/Raven/Special/Binah/Abilities/Shockwave</texPath>
      <graphicClass>Graphic_Mote</graphicClass>
      <shaderType>MoteGlow</shaderType> 
      <drawSize>10.0</drawSize>
    </graphicData>
    <mote>
      <fadeInTime>1</fadeInTime>
      <solidTime>1</solidTime>
      <fadeOutTime>8</fadeOutTime>
      <growthRate>15</growthRate>
    </mote>
  </ThingDef>

</Defs>