<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- ==================== 大渡鸦 (Great Raven) ==================== -->
  
  <ThingDef ParentName="AnimalThingBase">
    <defName>Raven_GreatRaven</defName>
    <label>大渡鸦</label>
    <description>一种体型巨大、充满智慧的渡鸦变种。虽然它们保留了鸟类的外形，但其力量和坚韧程度堪比传说中的敲击兽。\n\n大渡鸦对闪闪发光的物体有着近乎病态的执着，经常会叼回一些金色的战利品。它们非常聪明，甚至能听懂复杂的指令。</description>
    
    <statBases>
      <!-- 移动速度：参考鸵鸟(6.0)和敲击兽(5.5)，设为较高值 -->
      <MoveSpeed>8</MoveSpeed>
      <!-- 市场价值：介于稀有动物和神兽之间 -->
      <MarketValue>2500</MarketValue>
      <!-- 温度适应性：非常强 -->
      <ComfyTemperatureMin>-100</ComfyTemperatureMin>
      <ComfyTemperatureMax>100</ComfyTemperatureMax>
      <FilthRate>4</FilthRate>
      <!-- 野性：参考要求，设得较低以便驯服 (狗是0，敲击兽是0.98) -->
      <Wildness>0.35</Wildness>
      <!-- 护甲：参考敲击兽(0.6/0.4)，调高一点 -->
      <ArmorRating_Sharp>0.80</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.80</ArmorRating_Blunt>
      <ArmorRating_Heat>1.20</ArmorRating_Heat>
      <!-- 骑乘速度 -->
      <CaravanRidingSpeedFactor>5</CaravanRidingSpeedFactor>
    </statBases>

    <uiIconScale>1.5</uiIconScale>

    <tools>
      <!-- 喙击：高伤害 -->
      <li>
        <label>巨喙</label>
        <capacities>
          <li>Bite</li>
          <li>Stab</li>
        </capacities>
        <power>24</power>
        <cooldownTime>1.2</cooldownTime>
        <linkedBodyPartsGroup>Beak</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>30</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <!-- 爪击 -->
      <li>
        <label>利爪</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>18</power>
        <cooldownTime>1.2</cooldownTime>
        <linkedBodyPartsGroup>Feet</linkedBodyPartsGroup>
      </li>
      <!-- 头部撞击 -->
      <li>
        <label>头部</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>15</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>

    <race>
      <!-- 身体结构：使用鸟类身体 -->
      <body>Bird</body>
      <herdAnimal>false</herdAnimal>
      <predator>true</predator>
      <maxPreyBodySize>3.0</maxPreyBodySize>
      
      <!-- 体型：敲击兽是4.0，鸵鸟是1.0 -->
      <baseBodySize>2.5</baseBodySize>
      <baseHealthScale>5.0</baseHealthScale> <!-- 极高血量 -->
      <baseHungerRate>0.8</baseHungerRate>
      
      <!-- 饮食：杂食性 -->
      <foodType>OmnivoreAnimal, OvivoreAnimal</foodType>
      
      <leatherDef>Leather_Bird</leatherDef>
      
      <!-- 智商：最高级 (可搬运、救援、攻击) -->
      <trainability>Advanced</trainability>
      
      <gestationPeriodDays>20</gestationPeriodDays>
      <lifeExpectancy>120</lifeExpectancy>
      
      <!-- 声音：复用鸵鸟或类似的鸟类声音 -->
      <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
      <soundEating>Bird_Eat</soundEating>
      
      <!-- 100% 反击率 -->
      <manhunterOnDamageChance>1.00</manhunterOnDamageChance>
      <manhunterOnTameFailChance>0.30</manhunterOnTameFailChance>

      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.5</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>1.0</minAge>
          <!-- 这里应该引用具体的鸟叫声，暂时复用通用鸟叫 -->
          <soundWounded>Pawn_Chick_Call</soundWounded>
          <soundDeath>Pawn_Chick_Call</soundDeath>
          <soundCall>Pawn_Chick_Call</soundCall>
          <soundAngry>Pawn_Chick_Call</soundAngry>
        </li>
      </lifeStageAges>
    </race>
    
    <comps>
      <!-- 卵生逻辑 -->
      <li Class="CompProperties_EggLayer">
        <eggUnfertilizedDef>Raven_SpiritEgg_Unfertilized</eggUnfertilizedDef>
        <eggFertilizedDef>Raven_SpiritEgg_Unfertilized</eggFertilizedDef> <!-- 暂时用未受精蛋占位，或者你需要定义一个受精蛋 -->
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>15</eggLayIntervalDays>
        <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
        <eggCountRange>1</eggCountRange>
      </li>
      
      <!-- 【核心功能】寻找亮闪闪 -->
      <li Class="RavenRace.Features.Creatures.GreatRaven.CompProperties_GreatRavenTreasure" />
    </comps>
    
    <tradeTags>
      <li>AnimalExotic</li>
      <li>AnimalFighter</li>
    </tradeTags>
  </ThingDef>

  <PawnKindDef ParentName="AnimalKindBase">
    <defName>Raven_GreatRaven</defName>
    <label>大渡鸦</label>
    <race>Raven_GreatRaven</race>
    <combatPower>550</combatPower> <!-- 很高 -->
    <ecoSystemWeight>0.5</ecoSystemWeight>
    
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Animal/GreatRaven</texPath>
          <drawSize>1.8</drawSize>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Animal/Dessicated_GreatRaven</texPath>
          <drawSize>1.8</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Animal/GreatRaven</texPath>
          <drawSize>2.4</drawSize>
          <shadowData>
            <volume>(0.6, 0.45, 0.45)</volume>
            <offset>(0,0,-0.25)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Animal/Dessicated_GreatRaven</texPath>
          <drawSize>2.4</drawSize>
        </dessicatedBodyGraphicData>
      </li>
      <li>
        <bodyGraphicData>
          <texPath>Animal/GreatRaven</texPath>
          <drawSize>3.2</drawSize>
          <shadowData>
            <volume>(0.8, 0.6, 0.6)</volume>
            <offset>(0,0,-0.3)</offset>
          </shadowData>
        </bodyGraphicData>
        <dessicatedBodyGraphicData>
          <texPath>Animal/Dessicated_GreatRaven</texPath>
          <drawSize>3.2</drawSize>
        </dessicatedBodyGraphicData>
      </li>
    </lifeStages>


  </PawnKindDef>

</Defs>