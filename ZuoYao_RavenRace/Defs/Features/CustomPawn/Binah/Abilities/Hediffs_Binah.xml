<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- 锁 Hediff -->
  <HediffDef>
    <defName>Raven_Hediff_Binah_DegradationLock</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>劣化之锁</label>
    <description>被锁链束缚。</description>
    <defaultLabelColor>(0.8, 0.2, 0.2)</defaultLabelColor>
    <isBad>true</isBad>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>60000</disappearsAfterTicks>
        <showRemainingTime>true</showRemainingTime>
      </li>
    </comps>
    <stages>
      <li>
        <capMods>
          <li><capacity>Moving</capacity><setMax>0</setMax></li>
          <li><capacity>Manipulation</capacity><setMax>0</setMax></li>
        </capMods>
      </li>
    </stages>
    <!-- 锁链贴图 -->
    <renderNodeProperties>
      <li>
        <nodeClass>PawnRenderNode</nodeClass>
        <workerClass>PawnRenderNodeWorker</workerClass>
        <texPath>Races/Raven/Special/Binah/Abilities/LockChain</texPath>
        <parentTagDef>Body</parentTagDef>
        <drawData>
          <scale>1.5</scale>
        </drawData>
      </li>
    </renderNodeProperties>
  </HediffDef>
  
  <!-- 技能赋予 Hediff -->
  <HediffDef>
    <defName>Raven_Hediff_Binah_Skills</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>仲裁鸟之力</label>
    <description>Binah的独特能力。</description>
    <initialSeverity>1</initialSeverity>
    <isBad>false</isBad>
    <comps>
      <!-- [核心修复] 使用 abilityDefs 列表，只用一个 Comp -->
      <li Class="HediffCompProperties_GiveAbility">
        <abilityDefs>
          <li>Raven_Ability_Binah_PillarShot</li>
          <li>Raven_Ability_Binah_Shockwave</li>
          <li>Raven_Ability_Binah_DegradationPillar</li>
          <li>Raven_Ability_Binah_DegradationLock</li>
        </abilityDefs>
      </li>
    </comps>
  </HediffDef>
</Defs>