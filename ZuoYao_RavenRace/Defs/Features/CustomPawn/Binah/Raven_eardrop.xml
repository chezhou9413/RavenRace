<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef ParentName="ApparelBase">
        <defName>Raven_eardrop</defName>
        <label>调律者的耳环</label>
        <description>一副精致的耳环。佩戴它会让人显得更加神秘和优雅，从而提升社交表现。</description>
        <smeltable>false</smeltable>
        <apparel>
            <wornGraphicPath />
            <layers>
                <li>Belt</li>
            </layers>
            <bodyPartGroups>
                <li>Eyes</li>
            </bodyPartGroups>
            <renderNodeProperties>
                <li>
                    <nodeClass>PawnRenderNode</nodeClass>
                    <workerClass>ChezhouLib.ClPawnRenderNodeWorker.PawnRenderNodeWorker_FixedSize</workerClass>
                    <texPath>Races/Raven/Special/Binah/Eardrop/Eardrop</texPath>
                    <parentTagDef>Head</parentTagDef>
                    <baseLayer>170</baseLayer>
                    <shaderTypeDef>Cutout</shaderTypeDef>
                    <drawData>
                        <scale>0.46</scale>
                        <defaultData>
                            <offset>(0, 0, 0)</offset>
                        </defaultData>
                    </drawData>
                </li>
            </renderNodeProperties>
            <tags>
                <li>Binah_Apparel</li>
            </tags>
        </apparel>
        <comps>
            <li Class="ChezhouLib.Comp.CompProperties_KindLocked">
                <requiredPawnKindDefName>
                    <li>Raven_PawnKind_Binah</li>
                </requiredPawnKindDefName>
            </li>
            <li Class="ChezhouLib.comp.ApparelAddBodyAddonCompProperties">
                <targetRaces>
                    <li>Raven_Race</li>
                </targetRaces>
            </li>
        </comps>
        <graphicData>
            <texPath>Races/Raven/Special/Binah/Eardrop/Eardrop_south</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(0.8,0.8)</drawSize>
        </graphicData>
        <statBases>
            <Mass>0.03</Mass>
            <MarketValue>50000</MarketValue>
            <MaxHitPoints>6000</MaxHitPoints>
            <Flammability>0.1</Flammability>
            <Insulation_Cold>0</Insulation_Cold>
            <Insulation_Heat>0</Insulation_Heat>
        </statBases>
        <tradeability>All</tradeability>

        <equippedStatOffsets>
            <SocialImpact>0.25</SocialImpact>
        </equippedStatOffsets>

        <thingCategories>
            <li>Apparel</li>
        </thingCategories>

    </ThingDef>

</Defs>