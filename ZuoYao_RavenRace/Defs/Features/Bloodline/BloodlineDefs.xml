        <defName>Bloodline_Mechanoid</defName>
        <label>机械体血脉</label>
        <labelShort>机械</labelShort>
        <description>源自机械体的无机血脉。</description>
        <raceDef>Mech_Lancer</raceDef> 
    </RavenRace.BloodlineDef>

    <!-- 可以在此添加其他兼容种族的血脉定义，如鼠族等 -->
