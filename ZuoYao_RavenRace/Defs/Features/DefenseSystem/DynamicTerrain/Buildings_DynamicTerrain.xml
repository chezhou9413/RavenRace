<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- 生成的临时墙体 (保持不变) -->
  <ThingDef ParentName="BuildingBase">
    <defName>Raven_TrapWall</defName>
    <label>energy barrier wall</label>
    <description>A temporary wall generated by a trap. It will dissipate after a short time.</description>
    <thingClass>RavenRace.Building_RavenTrapWall</thingClass>
    <category>Building</category>
    
    <graphicData>
      <texPath>Buildings/DefenseSystem/RavenDefenseWall/RavenTrapWall</texPath> 
      <graphicClass>Graphic_Single</graphicClass>
      <color>(100, 110, 120)</color> 
    </graphicData>
    
    <statBases>
      <MaxHitPoints>500</MaxHitPoints>
      <Flammability>0</Flammability>
    </statBases>
    <size>(1,1)</size>
    <passability>Impassable</passability>
    <fillPercent>1.0</fillPercent>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <holdsRoof>true</holdsRoof>
    
    <blockLight>true</blockLight>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
  </ThingDef>

  <!-- 升墙陷阱触发器 (恢复为玩家可建造) -->
  <ThingDef ParentName="BuildingBase">
    <defName>RavenTrap_RisingWall</defName>
    <label>rising wall trap</label>
    <description>A trap that generates a massive enclosure of walls and roof when triggered. Size can be adjusted in Mod Settings.</description>
    <thingClass>RavenRace.Building_RavenTrap</thingClass>
    
    <graphicData>
      <texPath>Buildings/DefenseSystem/RavenDefenseWall/RavenRisingWall</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <color>(80, 80, 90)</color>
    </graphicData>
    
    <altitudeLayer>Building</altitudeLayer>
    <rotatable>false</rotatable>
    <tickerType>Normal</tickerType>
    
    <statBases>
      <Mass>10</Mass>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>2000</WorkToBuild>
      <Flammability>0</Flammability>
    </statBases>
    <costList>
      <Steel>150</Steel>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>

    <!-- [Fixed] 恢复 designationCategory，使其在菜单中显示 -->
    <designationCategory>Security</designationCategory>

    <building>
      <isTrap>true</isTrap>
      <expandHomeArea>false</expandHomeArea>
    </building>
    
    <!-- 对应科技 -->
    <researchPrerequisites>
      <li>RavenResearch_DynamicTerrain</li> 
    </researchPrerequisites>
    
    <comps>
      <!-- 触发器 -->
      <li Class="RavenRace.CompProperties_Trigger">
        <condition>Proximity</condition> 
        <!-- 半径设为 0 或小值，实际生效主要看 Proximity 逻辑 -->
        <detectionRadius>2.9</detectionRadius> 
        <hostileCountThreshold>1</hostileCountThreshold>
        <cooldownTicks>-1</cooldownTicks>
        <manualTriggerable>true</manualTriggerable>
      </li>
      
      <!-- 升墙效果组件 -->
      <li Class="CompProperties">
        <compClass>RavenRace.CompTrapEffect_RisingWall</compClass>
      </li>
    </comps>
  </ThingDef>

</Defs>