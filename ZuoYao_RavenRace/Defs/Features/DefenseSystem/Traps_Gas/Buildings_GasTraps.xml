<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- 基础气体陷阱定义 -->
  <ThingDef Name="RavenGasTrapBase" ParentName="BuildingBase" Abstract="True">
    <thingClass>RavenRace.Building_RavenTrap</thingClass>
    <altitudeLayer>Building</altitudeLayer>
    <rotatable>false</rotatable>
    <tickerType>Normal</tickerType>
    <statBases>
      <Mass>5</Mass>
      <MaxHitPoints>40</MaxHitPoints>
      <WorkToBuild>1000</WorkToBuild>
      <Flammability>0</Flammability>
    </statBases>
    <costList>
      <Steel>20</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <designationCategory>Security</designationCategory>
    <researchPrerequisites>
      <li>RavenResearch_ChemicalWarfare</li>
    </researchPrerequisites>
  </ThingDef>

  <!-- 麻醉陷阱 -->
  <ThingDef ParentName="RavenGasTrapBase">
    <defName>RavenTrap_Gas_Anesthetic</defName>
    <label>anesthetic gas trap</label>
    <graphicData>
      <texPath>Things/Building/Security/RavenTrapGas/AnestheticGas</texPath> <!-- 暂时使用原版，建议换成你的 -->
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <description>Releases a cloud of anesthetic gas when triggered. Causes unconsciousness.</description>
    <comps>
      <li Class="RavenRace.CompProperties_Trigger">
        <condition>StepOn</condition>
        <cooldownTicks>-1</cooldownTicks>
        <manualTriggerable>true</manualTriggerable>
      </li>
      <li Class="RavenRace.CompProperties_GasRelease">
        <gasDef>RavenGas_Anesthetic</gasDef>
        <gasRadius>3</gasRadius>
      </li>
    </comps>
  </ThingDef>

  <!-- 催情陷阱 -->
  <ThingDef ParentName="RavenGasTrapBase">
    <defName>RavenTrap_Gas_Aphrodisiac</defName>
    <label>aphrodisiac gas trap</label>
    <graphicData>
      <texPath>Things/Building/Security/RavenTrapGas/AphrodisiacGas</texPath> <!-- 暂时使用原版，建议换成你的 -->
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <description>Releases a cloud of powerful aphrodisiac gas. Victims will strip and collapse in ecstasy.</description>
    <comps>
      <li Class="RavenRace.CompProperties_Trigger">
        <condition>StepOn</condition>
        <cooldownTicks>-1</cooldownTicks>
        <manualTriggerable>true</manualTriggerable>
      </li>
      <li Class="RavenRace.CompProperties_GasRelease">
        <gasDef>RavenGas_Aphrodisiac</gasDef>
        <gasRadius>3</gasRadius>
      </li>
    </comps>
  </ThingDef>

</Defs>