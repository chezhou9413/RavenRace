<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef>
    <defName>RavenHediff_TendonCut</defName>
    <label>cut tendon</label>
    <description>The Achilles tendon has been severed. Movement is severely impaired and recovery is impossible without surgery.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.9, 0.2, 0.2)</defaultLabelColor>
    <isBad>true</isBad>
    <tendable>true</tendable> <!-- [Fixed] Added tendable=true -->
    <comps>
      <li Class="HediffCompProperties_TendDuration">
        <baseTendDurationHours>48</baseTendDurationHours>
        <severityPerDayTended>-0.5</severityPerDayTended>
      </li>
    </comps>
    <stages>
      <li>
        <label>fresh</label>
        <painOffset>0.4</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.6</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.5</minSeverity>
        <label>scarred</label>
        <painOffset>0.1</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.3</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
</Defs>