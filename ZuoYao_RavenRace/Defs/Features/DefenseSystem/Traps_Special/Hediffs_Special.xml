<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef>
    <defName>RavenHediff_LegoPain</defName>
    <label>lego pain</label>
    <description>The intense pain of stepping on a lego brick.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(1.0, 0.0, 0.0)</defaultLabelColor>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>600</disappearsAfterTicks> <!-- 10秒后消失 -->
      </li>
    </comps>
    <stages>
      <li>
        <painOffset>0.8</painOffset> <!-- 极度疼痛 -->
      </li>
    </stages>
  </HediffDef>

  <HediffDef>
    <defName>RavenHediff_ConceptionProcess</defName>
    <label>conception process</label>
    <description>Being subjected to a forced conception process.</description>
    <hediffClass>RavenRace.Hediff_ConceptionProcess</hediffClass>
    <defaultLabelColor>(1.0, 0.5, 0.8)</defaultLabelColor>
    <isBad>true</isBad>
  </HediffDef>
</Defs>