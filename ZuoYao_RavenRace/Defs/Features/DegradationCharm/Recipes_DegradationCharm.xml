<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- ==================== 制作淫堕符咒 (配方定义) ==================== -->
  <RecipeDef>
    <defName>Make_Raven_CorruptionTalisman</defName>
    <label>制作淫堕符咒</label>
    <description>将承载精神能量的材料与代表生命精华的羽毛相结合，绘制出能够扭曲心智的禁忌符咒。</description>
    <jobString>正在绘制淫堕符咒。</jobString>
    
    <!-- 制作配方属性 -->
    <workAmount>1200</workAmount>
    <workSpeedStat>DrugSynthesisSpeed</workSpeedStat> <!-- 使用药品制作速度 -->
    <effectWorking>Cook</effectWorking> <!-- 使用通用的制作特效 -->
    <soundWorking>Recipe_CookMeal</soundWorking> <!-- 使用通用的制作音效 -->
    <allowMixingIngredients>true</allowMixingIngredients>
    <targetCountAdjustment>1</targetCountAdjustment> <!-- 每次制作1个 -->
    
    <!-- 所需材料 -->
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Neutroamine</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Raven_GoldenFeather</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    
    <!-- 固定材料过滤器 -->
    <fixedIngredientFilter>
      <thingDefs>
        <li>WoodLog</li>
        <li>Neutroamine</li>
        <li>Raven_GoldenFeather</li>
      </thingDefs>
    </fixedIngredientFilter>

    <!-- 产物 -->
    <products>
      <Raven_Item_CorruptionTalisman>5</Raven_Item_CorruptionTalisman>
    </products>

    <!-- 制作技能要求 -->
    <skillRequirements>
      <Intellectual>6</Intellectual>
    </skillRequirements>
    
    <!-- 在哪个工作台制作 -->
    <recipeUsers>
      <li>DrugLab</li>
    </recipeUsers>
    
    <!-- 解锁科技 -->
    <researchPrerequisite>RavenResearch_DegradationCharm</researchPrerequisite>
  </RecipeDef>

</Defs>